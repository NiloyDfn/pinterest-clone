<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-600 px-10 py-5 text-white">
        <h1 class="text-xl">create a new post</h1>
        <hr class="opacity-10 mt-3 mb-5"> 
        <form class="flex flex-col gap-10" action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 "  type="file" name="postimage">
            <input class="text-black w-1/3 px-3 py-2 border-2 rounded"  type="text" placeholder="Title" name="title">
            <textarea class="text-black resize-none h-60 block w-1/3 px-3 py-2 border-2 rounded"  type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/5 px-3 py-2  rounded bg-red-600"  type="submit" value="Create Post">
        </form>
    </div>

<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-600 pt-10 text-white">
   <form hidden id="upload-form" action="fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="pimage">
   </form>
    <div class="prodets flex  flex-col items-center">
        <div class="relative"> 
            <span id="upload-icon" class="w-8 h-8 absolute bottom-0  right-0 rounded-full flex items-center justify-center bg-zinc-200"><i class="text-zinc-600 ri-edit-line"></i></span>
            <div class="w-32 h-32 bg-zinc-200 overflow-hidden rounded-full">  
                <img class="h-full w-full object-cover " src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>      
        </div>
        <h1 class="text-2xl font-semibold "><%= user.name %></h1> 
        <h1 class="text-2xl font-semibold "><%= user.bio %></h1> 
        <h3 class="text-md">@<%= user.username %></h3>
            <a href="/edit" class=" mt-5 px-10 py-3 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5 uppercase">add new post</a>
        </div>
        <div class="cards flex flex-wrap mt-10 px-10 gap-10">
            <!-- Loop through each post -->
            <% user.posts.forEach(elem => { %>
                <div class="card ">
                    <div class="w-60   h-60 bg-zinc-200 overflow-hidden rounded-lg text-white">
                        <a href="/show/posts/" class="text-4xl  uppercase font-semibold mt-20"><img class="w-full h-full object-cover object-center" src="/images/uploads/<%= elem.image %>" alt=""></a>
                        <!-- Display the image for each post -->
                    </div>
                    
                </div>
                <% }) %>
            </div>
</div>

<script>
 document.querySelector('#upload-icon').addEventListener('click', () => {
    document.querySelector('#upload-form input').click();
 })
 document.querySelector('#upload-form input').addEventListener('change', () => {
    document.querySelector('#upload-form').submit();
 })

</script>

<% include ./partials/footer.ejs %>

